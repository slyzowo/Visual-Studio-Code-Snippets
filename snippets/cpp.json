{
	// Place your snippets for cpp here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }

  "int main()": {
    "prefix": "main",
    "body": [
      "#include <iostream>",
      "using std::cout",
      "using std::in",
      "",
      "int main() {",
      "",
      "\t$0",
      "",
      "return 0;",
      "}"
    ],
    "description": "Basic main function"
  },

  "multiline comment": {
    "prefix": "/*",
    "body": [
      "/*",
      "\t",
      "*/"
    ],
    "description": "Multi-Line Comment"
  },

  "if statement": {
    "prefix": "if",
    "body": [
      "if(){",
      "\t",
      "}"
    ],
    "description": "If statement"
  },

  "switch statement": {
    "prefix": "switch",
    "body": [
      "switch(){",
      "",
      "\tcase 1:",
      "\tbreak;",
      "",
      "\tdefault:",
      "\tbreak;",
      "}"
    ],
    "description": "switch statement"
  },

  "for loop statement": {
    "prefix": "for",
    "body": [
      "for(){",
      "",
      "}"
    ],
    "description": "for loop statement"
  },

  "while loop statement": {
    "prefix": "while",
    "body": [
      "while(){",
      "",
      "}"
    ],
    "description": "while loop statement"
  },

  "do while loop statement": {
    "prefix": "do",
    "body": [
      "do(){",
      "",
      "}",
      "while()",
    ],
    "description": "do while loop statement"
  },

  "enum statement": {
    "prefix": "enum",
    "body": [
      "enum {",
      "",
      "}"
    ],
    "description": "enumeration statement"
  },

  "struct statement": {
    "prefix": "struct",
    "body": [
      "struct {",
      "",
      "};"
    ],
    "description": "structure statement"
  },

  "union statement": {
    "prefix": "union",
    "body": [
      "union {",
      "",
      "};"
    ],
    "description": "union statement"
  },

